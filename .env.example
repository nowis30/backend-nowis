# Base Postgres locale (ajustez selon votre instance)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nowis_local?sslmode=require&schema=public"

# Exemple Render (mettre vos identifiants via le dashboard, pas dans ce fichier)
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require&schema=public"

JWT_SECRET="change-me-please-change-in-prod"

# Moteur IA : `heuristic` (défaut) ou `gpt` pour la prévisualisation future
ADVISOR_ENGINE="heuristic"

# Clé API portail public conseillers (optionnelle). Permet d'accéder aux endpoints sans JWT.
# ADVISOR_PORTAL_API_KEY="conseiller-demo"

# OpenAI (activer GPT)
# Clé API OpenAI (obligatoire pour ADVISOR_ENGINE=gpt)
# OPENAI_API_KEY="sk-..."
# URL de base optionnelle (par défaut: https://api.openai.com/v1)
# OPENAI_BASE_URL="https://api.openai.com/v1"
# Modèle (par défaut: gpt-4.1)
# OPENAI_MODEL="gpt-4.1"
# Modèle dédié au diagnostic global (prioritaire sur OPENAI_MODEL)
# OPENAI_MODEL_CORE="gpt-5-mini"
# Modèle dédié aux réponses expertes ciblées (prioritaire sur OPENAI_MODEL)
# OPENAI_MODEL_TARGETED="gpt-5"

# Azure OpenAI (optionnel) — si vous utilisez Azure au lieu d'OpenAI
# OPENAI_PROVIDER="azure"
# OPENAI_BASE_URL="https://<ressource>.openai.azure.com"
# OPENAI_AZURE_DEPLOYMENT="nom_du_deploiement"
# OPENAI_API_VERSION="2024-02-15-preview"

# Planification des snapshots de patrimoine (optionnel)
# ENABLE_WEALTH_SNAPSHOT_JOB="true"
# WEALTH_SNAPSHOT_INTERVAL_MINUTES=720
